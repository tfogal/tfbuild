#!/bin/sh
source ~/build/bf.sh

VER="1.3.3"
URL="http://www.open-mpi.org/software/ompi/v1.3/downloads/openmpi-${VER}.tar.bz2"

gnu_pkg \
    --enable-debug \
    --enable-memchecker \
    --disable-mpi-f77 \
    --enable-pretty-print-stacktrace \
    --enable-cxx-exceptions \
    --enable-mpi-threads \
    --with-valgrind=${PREFIX} \
    --without-gm \
    --without-mx \
    --without-openib \
    --without-psm \
    --with-pic \
    --with-gnu-ld \
    $@
