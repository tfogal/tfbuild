#!/bin/sh
source ~/build/bf.sh

URL="http://kernel.org/pub/software/scm/git/git-1.6.0.4.tar.bz2"
MAN="http://kernel.org/pub/software/scm/git/git-manpages-1.6.0.4.tar.bz2"
TARBALL="git-1.6.0.4.tar.bz2"
MAN_TARBALL="git-manpages-1.6.0.4.tar.bz2"

setup
src_download
src_extract
src_cd
make configure
src_configure
src_make
src_install
teardown

# ... and get the manpages too.
pushd "${PREFIX}/man"
download ${MAN}
tar jxf "${MAN_TARBALL}"
rm -f "${MAN_TARBALL}"
popd
